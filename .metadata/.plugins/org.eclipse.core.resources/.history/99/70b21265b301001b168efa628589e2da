package variaveis;

import javax.swing.JOptionPane;

public class Variavel {
//Variavel é um espaço temporário na memória RAM onde você armazena um dado
	public static void main(String[] args) {
		//Sintaxe para criar variaveis
		// <tipo do dado> <nome da variavel>;
		/*
		 * Tipos de Dados:
		 * a) Numérico: dado que será utilizado em uma operação matemática e/ou for um dado crítico para consulta.
		 * CEP no contexto dos correios
		 * b) Alfanumérico: dado que não é utilizado para operações matemáticas.
		 * CEP no contexto do RH do Itau
		 */
		String nome = "";
		int idade = 0;
		double altura=0;
		
		nome = JOptionPane.showInputDialog("Digite seu nome");
		idade = JOptionPane.showInputDialog("Digite sua idade");
		altura = JOptionPane.showInputDialog("Digite sua altura");				
		
		System.out.println("Nome...: " + nome);
		System.out.println("Idade..: " + idade);
		System.out.println("Altura.: " + altura);
		
		
		
	}
}
