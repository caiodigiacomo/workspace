package repeticao;

import javax.swing.JOptionPane;

public class DesafioRepeticao {

	public static void main(String[] args) {
		
		int jogador1 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 1, digite um número"));
		int jogador2 = 0;
		do {
			jogador2 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 2, qual número o Jogador 1 digitou?"));
			if (jogador2>jogador1) {
				System.out.println("Digite um número menor");
			} else if (jogador2<jogador1) {
				System.out.println("Digite um número maior");
			}
		} while(jogador2 != jogador1);
			System.out.println("Parabéns! Você acertou!");

	}
	}
