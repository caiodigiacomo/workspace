package decisao;

import javax.swing.JOptionPane;

public class Exercicio1 {

	public static void main(String[] args) {
		
		String nome = (JOptionPane.showInputDialog("Digite o nome do cliente"));
		double investimento = Double.parseDouble(JOptionPane.showInputDialog("Digite o valor investido"));
		int fidelidade = Integer.parseInt(JOptionPane.showInputDialog("Digite quantos anos serão de fidelidade"));
		String regiao = (JOptionPane.showInputDialog("Digite a região onde mora"));
		
		if (regiao=sul || regiao=sudeste) {
			fidelidadecorrigida = fidelidade * 1.2;
		}else if (investimento<1000) {
		investimentocorrigido = investimento * 1.015;
		}else if (investimento>=1000 && investimento<5000) {
		investimentocorrigido = investimento * 1.02;
		}else if (investimento>=5000) {
			investimentocorrigido = investimento * 1.03;
		}
		if (fidelidade>5) {
			investimentocorrigido = investimento * 1.01;
		}
		System.out.println("O valor investido é: " + investimentocorrigido);
		

	}

}
